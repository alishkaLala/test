= form_for @ticket do |f|

  - if @ticket.errors.any?
    #error_explanation
      %h2= "Errors:"
      %ul
        - @ticket.errors.full_messages.each do |message|
          %li= message
      
  = f.label :name, :class => 'control-label'
  %br
  = f.text_field :name,:size => 20, :class => 'text_field' 
  %br
  = f.label :email, :class => 'control-label'
  %br
  = f.text_field :email, :size => 20, :class => 'email_field'   
  %br
  = f.label :ticket_department, :class => 'control-label'
  %br
  = f.select :ticket_department_id, options_for_select(TicketDepartment.all.map{|d| [d.definition, d.id]},@ticket_department_id)
  %br
  = f.label :subject, :class => 'control-label'
  %br
  = f.text_field :subject, :size => 20, :class => 'text_field'    
  %br
  = f.label :body, :class => 'control-label'
  %br
  = f.text_area :body,:cols => 20, :rows => 14, :class => 'text_area'
  %br
  = f.submit nil, :class => 'btn btn-primary'

